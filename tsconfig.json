{
  "compilerOptions": {
    "target": "es6",                              
    "module": "commonjs",                           
    "declaration": true,                           
    "outDir": "./lib/",                             
    "strict": true,                                 
    "moduleResolution": "node",                 
    "esModuleInterop": true,                        

    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
